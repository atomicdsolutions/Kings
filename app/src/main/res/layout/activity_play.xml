<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.peugebenjamin.kings.MainActivity"
    android:orientation="horizontal"
    android:onClick="drawCard">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#141212"
        android:dividerPadding="@dimen/abc_action_bar_default_height_material">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:text="@string/play_text"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/played"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:id="@+id/imageView"
            android:layout_gravity="center_vertical"
            android:src="@drawable/deck"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Draw Now"
            android:id="@+id/btplay"
            android:nestedScrollingEnabled="true"
            android:background="#f40e0e"/>
    </LinearLayout>

</LinearLayout>
